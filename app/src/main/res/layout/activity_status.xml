<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.samniashvili.irakli.androidfirebase.StatusActivity">

    <include
        android:id="@+id/status_appBar"
        layout="@layout/app_bar_layout" />

    <EditText
        android:id="@+id/status_save_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status_appBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp"
        android:width="300dp"
        android:ems="10"
        android:hint="@string/new_status"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/status_save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status_save_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/save_new_status"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

</RelativeLayout>
